<div class="container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="panel-heading"><h1>The Question: <%= @question.the_question %></h1></div>
            <% @question.videos.each do |v| %>
                  <% if v.filepath != nil %>
                    
                      <video width="70%" height="70%" controls>
                        <source src="<%= v.filepath %>" type="video/webm">
                      </video>
                    
                      <div class="floatRight">
                        <i>Belongs to: <%= link_to @question.user.username, user_path(@question.user.id) %></i>
                      </div>
                      <hr />
                    
                  <% end %>
                
            <% end %>
        </div>
      </div>
      
      <%= link_to "Answer This Question", new_video_path(@question.id) %><br />


    
      <%= link_to "Back to the list!", questions_path %><br />
      <%= link_to "Edit Question", edit_question_path %><br />
      <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> 
    </div>
    <div class="col-md-1"></div>
  </div>
</div>

